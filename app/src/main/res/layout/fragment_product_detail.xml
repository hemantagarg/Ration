<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/header_layout"
        layout="@layout/header_layout" />

    <android.support.v4.widget.NestedScrollView
        android:id="@+id/sv_productdetails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/layout_bottom"
        android:layout_below="@+id/header_layout"
        android:scrollbars="none"
        android:visibility="visible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/image_top"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginTop="@dimen/dp10" />


            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp4"
                android:background="@color/view_color" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp5">


                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp10"
                    android:layout_toLeftOf="@+id/right_layout"
                    android:orientation="vertical"
                    android:padding="@dimen/dp5">

                    <TextView
                        android:id="@+id/TeaName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="Green Tea 1"
                        android:textColor="@color/red"
                        android:textSize="@dimen/text_size_15" />

                    <TextView
                        android:id="@+id/teaType"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/TeaName"
                        android:layout_gravity="center_horizontal"
                        android:text="Nestle"
                        android:textSize="@dimen/text_size_17"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/spinner_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/teaType"
                        android:layout_gravity="center_horizontal"
                        android:background="@drawable/list_bg"
                        android:paddingBottom="3dp"
                        android:paddingLeft="5dp"
                        android:paddingRight="30dp"
                        android:paddingTop="3dp"
                        android:singleLine="true"
                        android:text=""
                        android:textColor="@color/textcolordark"
                        android:textSize="@dimen/text_size_14" />


                    <Spinner
                        android:id="@+id/spinner_product"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_below="@+id/teaType"
                        android:clickable="true"
                        android:padding="@dimen/dp3"
                        android:textSize="@dimen/text_size_14" />


                    <TextView
                        android:id="@+id/teaPrice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/spinner_text"
                        android:layout_centerVertical="true"
                        android:drawableLeft="@drawable/rs"
                        android:drawablePadding="@dimen/dp2"
                        android:text="0"
                        android:textColor="@color/red"
                        android:textSize="@dimen/text_size_14" />

                    <TextView
                        android:id="@+id/special_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/spinner_text"
                        android:layout_marginLeft="@dimen/dp5"
                        android:layout_toRightOf="@+id/teaPrice"
                        android:drawableLeft="@drawable/rs"
                        android:drawablePadding="@dimen/dp2"
                        android:text="320"
                        android:textColor="@color/red"
                        android:textSize="@dimen/text_size_14"
                        android:visibility="gone" />


                </RelativeLayout>


                <LinearLayout
                    android:id="@+id/right_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/dp10"
                        android:orientation="horizontal">


                        <ImageView
                            android:id="@+id/image_subtract"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/dp10"
                            android:src="@drawable/remove" />

                        <TextView
                            android:id="@+id/text_itemcount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:padding="@dimen/dp10"
                            android:text="0"
                            android:textColor="@color/blue_color"
                            android:textSize="@dimen/text_size_17" />

                        <ImageView
                            android:id="@+id/image_add"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/dp10"
                            android:src="@drawable/add" />

                    </LinearLayout>

                </LinearLayout>


            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp5"
                android:background="@color/layout_bg">


                <TextView
                    android:id="@+id/promotion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp10"
                    android:padding="@dimen/dp5"
                    android:text="Product Description"
                    android:textColor="@color/red"
                    android:textSize="@dimen/text_size_14" />

                <ImageView
                    android:id="@+id/line"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/promotion"
                    android:padding="@dimen/dp5"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/buy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/line"
                    android:padding="@dimen/dp5"
                    android:text="Buy 1 Get 1 free"
                    android:textColor="@color/red"
                    android:visibility="gone" />

            </RelativeLayout>


            <TextView
                android:id="@+id/description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp10"
                android:layout_marginTop="@dimen/dp10"
                android:paddingLeft="@dimen/dp5"
                android:text="Product Description"
                android:textColor="@color/textcolordark"
                android:textSize="@dimen/text_size_14"
                android:visibility="gone" />


            <TextView
                android:id="@+id/sub_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp10"
                android:layout_marginRight="@dimen/dp10"
                android:layout_marginTop="@dimen/dp10"
                android:paddingBottom="@dimen/dp5"
                android:paddingLeft="@dimen/dp5"
                android:paddingRight="@dimen/dp5"
                android:text=""
                android:textColor="@color/textcolordark"
                android:textSize="@dimen/text_size_14" />


            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp4"

                android:background="@color/view_color" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <TextView
                    android:id="@+id/Similar_items"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp10"
                    android:layout_marginTop="@dimen/dp5"
                    android:paddingLeft="@dimen/dp5"
                    android:text="Similar Items"
                    android:textColor="@color/textcolordark"
                    android:textSize="@dimen/text_size_14"
                    android:visibility="gone" />


                <android.support.v7.widget.RecyclerView
                    android:id="@+id/list_products"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/Similar_items"
                    android:layout_marginLeft="@dimen/dp10"
                    android:layout_marginTop="@dimen/dp5"
                   />
            </RelativeLayout>
        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>

    <RelativeLayout
        android:id="@+id/layout_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/red">

        <ImageView
            android:id="@+id/cart1"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_centerVertical="true"
            android:padding="10dp"
            android:src="@drawable/cart_grey" />

        <TextView
            android:id="@+id/text_total_product"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignRight="@+id/cart1"
            android:background="@drawable/circle_count"
            android:gravity="center"
            android:text="0"
            android:textColor="#fff"
            android:textSize="@dimen/text_size_10" />

        <ImageView
            android:id="@+id/line_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/cart1"
            android:padding="10dp" />

        <ImageView
            android:id="@+id/rupeee"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/line_vertical"
            android:padding="@dimen/dp5"
            android:src="@drawable/rs_2" />


        <TextView
            android:id="@+id/text_total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/rupeee"
            android:text="0"
            android:textColor="#028E9C" />

        <LinearLayout
            android:id="@+id/ll_checkout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"

            android:padding="5dp">


            <TextView
                android:id="@+id/checkout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/right_arrow"
                android:padding="@dimen/dp4"
                android:text="Checkout"
                android:textColor="#028E9C" />

            <ImageView
                android:id="@+id/right_arrow"
                android:layout_width="@dimen/dp20"
                android:layout_height="@dimen/dp20"
                android:layout_centerVertical="true"
                android:padding="@dimen/dp5"
                android:src="@drawable/arrow_right" />

        </LinearLayout>
    </RelativeLayout>

    <include layout="@layout/incude_list" />

</RelativeLayout>






