<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/dp5"
    android:background="@color/white"
    app:cardCornerRadius="@dimen/dp5"
    app:cardElevation="3sp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:padding="@dimen/dp5">


        <RelativeLayout
            android:id="@+id/top_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <RelativeLayout
                android:id="@+id/second_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:orientation="vertical"
                android:paddingLeft="10dp">

                <TextView
                    android:id="@+id/text_orderId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text=""
                    android:textColor="@color/textcolordark"
                    android:textSize="@dimen/text_size_14" />

                <TextView
                    android:id="@+id/text_orderdate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/text_orderId"
                    android:layout_gravity="center_horizontal"
                    android:text=""
                    android:textColor="@color/textcolordark"
                    android:textSize="@dimen/text_size_14" />

                <TextView
                    android:id="@+id/text_ship"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/text_orderdate"
                    android:layout_gravity="center_horizontal"
                    android:text=""
                    android:textColor="@color/textcolordark"
                    android:textSize="@dimen/text_size_14" />


                <TextView
                    android:id="@+id/text_total"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/text_ship"
                    android:layout_centerVertical="true"
                    android:text=""
                    android:textColor="@color/textcolordark"
                    android:textSize="@dimen/text_size_14" />


                <TextView
                    android:id="@+id/text_order_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/text_total"
                    android:layout_centerVertical="true"
                    android:text=""
                    android:textColor="@color/textcolordark"
                    android:textSize="@dimen/text_size_14" />

            </RelativeLayout>

        </RelativeLayout>

    </RelativeLayout>

</android.support.v7.widget.CardView>

